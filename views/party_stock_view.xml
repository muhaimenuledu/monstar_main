<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- List View -->
  <record model="ir.ui.view" id="party_stock_summary_list">
    <field name="name">party.stock.summary.list</field>
    <field name="model">party.stock.summary</field>
    <field name="arch" type="xml">
      <list>
        <!-- <field name="date_from"/>
        <field name="date_to"/>
        <field name="partner_id"/> -->
        <field name="stock_summary_html" widget="html"/>
      </list>
    </field>
  </record>

  <!-- Form View -->
  <record id="view_party_stock_summary_form" model="ir.ui.view">
    <field name="name">party.stock.summary.form</field>
    <field name="model">party.stock.summary</field>
    <field name="arch" type="xml">
      <form string="Party Stock Summary">
        <header>
          <button name="action_export_xlsx"
                  type="object"
                  string="Export XLSX"
                  class="btn-primary"/>
        </header>
        <sheet>
          <group>
            <field name="date_from"/>
            <field name="date_to"/>
            <field name="partner_id"/>
            <field name="product_id"/>

          </group>
          <div>
            <field name="stock_summary_html" widget="html"/>
          </div>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Action -->
  <record id="action_party_stock_summary" model="ir.actions.act_window">
    <field name="name">Party Stock Summary</field>
    <field name="res_model">party.stock.summary</field>
    <field name="view_mode">list,form</field>
    <field name="view_id" ref="party_stock_summary_list"/>
  </record>

</odoo>
