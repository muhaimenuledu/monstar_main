<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="general_ledg">
      <field name="name">general ledger</field>
      <field name="model">general.ledger</field>
      <field name="arch" type="xml">
        <list>
          <!-- <field name="account_names"/>
          <field name="partner_names"/> -->
          <!-- <field name="account_breakdown" widget="text"/> -->
          <field name="journal_items" widget="html"/>
          <!-- <field name="total_debit"/>
          <field name="total_credit"/> -->

        </list>
      </field>
    </record>


        <record id="view_form_general_ledger" model="ir.ui.view">
        <field name="name">general.ledger.form</field>
        <field name="model">general.ledger</field>
        <field name="arch" type="xml">
            <form string="General Ledger">
                <header>
                    <button name="action_export_xlsx"
                            type="object"
                            string="Export XLSX"
                            class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        
                        <field name="account_id"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="journal_items" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_general_ledger" model="ir.actions.act_window" >
      <field name="name">General Ledger</field>
      <field name="res_model">general.ledger</field>
      <field name="view_mode">list,form</field>
      <field name="view_id" ref="general_ledg"/>
    </record>
</odoo>
