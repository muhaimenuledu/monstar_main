<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="partner_ledg">
      <field name="name">partner ledger</field>
      <field name="model">partner.ledger</field>
      <field name="arch" type="xml">
        <list>
          <!-- <field name="account_names"/>
          <field name="partner_names"/> -->
          <!-- <field name="account_breakdown" widget="text"/> -->
          <field name="partner_journal_breakdown" widget="html"/>
          <!-- <field name="total_debit"/>
          <field name="total_credit"/> -->

        </list>
      </field>
    </record>

    <record id="view_partner_ledger_form" model="ir.ui.view">
    <field name="name">partner.ledger.form</field>
    <field name="model">partner.ledger</field>
    <field name="arch" type="xml">
        <form string="Partner Ledger">
            <header>
                <button name="action_export_xlsx" string="Export XLSX" type="object" class="btn-primary"/>
            </header>
            <sheet>
                <!-- Your fields -->
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="product_categ_id"/>
                    <field name="partner_id"/>
                </group>
                <field name="partner_journal_breakdown" widget="html"/>
            </sheet>
        </form>
    </field>
</record>


    <record id="action_partner_ledger" model="ir.actions.act_window" >
      <field name="name">Partner Ledger</field>
      <field name="res_model">partner.ledger</field>
      <field name="view_mode">list,form</field>
      <field name="view_id" ref="partner_ledg"/>
    </record>
</odoo>
