<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Action -->
    <record id="action_group_party" model="ir.actions.act_window">
        <field name="name">Partner Ledger Group</field>
        <field name="res_model">group.party</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- List (Tree) View -->
    <record id="view_group_party_list" model="ir.ui.view">
        <field name="name">group.party.list</field>
        <field name="model">group.party</field>
        <field name="arch" type="xml">
            <list string="Partner Ledger Group">
                <field name="partner_journal_breakdown"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_group_party_form" model="ir.ui.view">
        <field name="name">group.party.form</field>
        <field name="model">group.party</field>
        <field name="arch" type="xml">
            <form string="Partner Ledger Group">
                <sheet>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="partner_id"/>
                        <field name="vendor_group"/>
                    </group>
                    <group>
                        <field name="partner_journal_breakdown" readonly="1" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
