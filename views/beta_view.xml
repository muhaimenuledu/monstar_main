<odoo>
    <record id="view_beta_list" model="ir.ui.view">
        <field name="name">beta.mode.list</field>
        <field name="model">beta.mode</field>
        <field name="arch" type="xml">
            <list string="Vendor Groups">
                <field name="group"/>
            </list>
        </field>
    </record>

    <record id="view_beta_form" model="ir.ui.view">
        <field name="name">beta.mode.form</field>
        <field name="model">beta.mode</field>
        <field name="arch" type="xml">
            <form string="Vendor Group">
                <sheet>
                    <group>
                        <field name="group"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_beta_mode" model="ir.actions.act_window">
        <field name="name">Vendor Groups</field>
        <field name="res_model">beta.mode</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your vendor groups
            </p>
        </field>
    </record>

    <!-- Menu under Monstar Main â†’ Report -->

</odoo>
